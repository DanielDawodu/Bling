{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/uploads/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/((?!api|uploads|assets|.*\\.).*)",
      "destination": "/index.html"
    }
  ]
}