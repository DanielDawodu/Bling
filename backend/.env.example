# Backend Environment Variables
# Copy this file to .env and fill in your values

# ==================== SERVER ====================
PORT=5001
NODE_ENV=production

# ==================== DATABASE ====================
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/bling?retryWrites=true&w=majority

# ==================== SECURITY ====================
# Generate a random string: openssl rand -base64 32
SESSION_SECRET=your_random_session_secret_here

# ==================== URLS (IMPORTANT FOR DEPLOYMENT) ====================
# Your deployed frontend URL (for CORS and OAuth redirects)
FRONTEND_URL=https://your-frontend.vercel.app

# Your deployed backend URL (for OAuth callbacks)
BACKEND_URL=https://your-backend.vercel.app

# ==================== OAUTH: GITHUB ====================
# Create app at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
# Set this to: {BACKEND_URL}/api/auth/github/callback
GITHUB_CALLBACK_URL=https://your-backend.vercel.app/api/auth/github/callback

# ==================== OAUTH: GOOGLE ====================
# Create app at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# Set this to: {BACKEND_URL}/api/auth/google/callback
GOOGLE_CALLBACK_URL=https://your-backend.vercel.app/api/auth/google/callback

# ==================== EMAIL (SMTP) ====================
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# ==================== GEMINI AI ====================
GEMINI_API_KEY=your_gemini_api_key

# ==================== CLOUDINARY (FILE UPLOADS) ====================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
